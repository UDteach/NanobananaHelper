{
    "manifest_version": 3,
    "name": "Markdown to Nanobanana",
    "version": "1.0.0",
    "description": "Select a local folder and paste Markdown file contents into Nanobanana chat.",
    "permissions": [
        "sidePanel",
        "storage",
        "scripting",
        "activeTab",
        "downloads"
    ],
    "host_permissions": [
        "https://gemini.google.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "action": {
        "default_title": "Open Nanobanana Helper"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}